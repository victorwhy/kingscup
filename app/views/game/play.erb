<script src="/js/game.js"></script>
<div id="playscreen" data-gameid="<%=session[:game]%>">
  <div id="sidebar">
    <div id="rules">
      Current rules:
      <ul>
        <% for i in 1..13 %>
          <% if i == 1 %>
            <% numlabel = 'A'%>
          <% elsif i == 11 %>
            <% numlabel = 'J'%>
          <% elsif i == 12 %>
            <% numlabel = 'Q'%>
          <% elsif i == 13 %>
            <% numlabel = 'K'%>
          <% else %>
            <% numlabel = i %>
          <% end %>  
          <li id="<%=i%>"><%=numlabel%>. <%= Card.find(i).rule %></li>
        <% end %>
      </ul>
    </div>
    <div id="players">
      Current Players:
      <ul>
        <% Game.find(session[:game]).players.each do |player| %>
          <li id="<%= player.id %>"><%= player.name %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="playingfield">
    <div class="card">
      <div id="backcard">
        <img src = "/images/blue_test.svg">
      </div>

      <div id="frontcard">
      </div>
    </div>
  </div>
</div>