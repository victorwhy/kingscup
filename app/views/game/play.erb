<script src="/js/game.js"></script>
<div id="playscreen">
  <div id="sidebar">
    <div id="rules">
      Current rules:
      <ul>
        <% for i in 1..13 %>
          <li id="<%=i%>"><%= Card.find(i).rule %></li>
        <% end %>
      </ul>
    </div>
    <div id="players">
      Current Players:
      <ul>
        <% Game.find(session[:game]).players.each do |player| %>
          <li id="<%= player.id %>"><%= player.name %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="playingfield">

  </div>
</div>