<script src="/js/game_page.js"></script>

<div class="create_game">
  <p><a href="/creategame">Start new game!</a></p>
</div>

<div class="show_games">
  <p>See past games:</p>
  <% Game.all.each do |game| %>
  <ul>
    <li><a href="#" data-gameid="<%=game.id%>">Game # <%=game.id%> - Created by <%=game.user.name%></a></li>
  </ul>
  <% end %>
</div>
